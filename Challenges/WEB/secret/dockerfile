FROM node:18-alpine

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
# Copy package.json and package-lock.json first for better caching
COPY package*.json ./

RUN npm install

# Copy app source code
COPY . .

# Create .env file if it doesn't exist
RUN touch .env

# Expose the port
EXPOSE 3000

# Start the application
CMD ["node", "server.js"]